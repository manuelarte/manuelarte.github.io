---
interface Project {
    name: string;
    description: string;
    link: {
        url?: string;
        target?: string;
        title?: string;
        buttonLabel?: string;
    };
}

const projects: Project[] = [{
    name: 'GitHub Kudos',
    description: 'A way to show support to GitHub users.',
    link: {
        url: 'https://github.com/manuelarte/github-kudos-template/',
    }
}, {
    name: 'Gocron-gorm-lock',
    description: 'An open source implementation for go-co-op/gocron locker using Gorm.',
    link: {
        url: 'https://github.com/go-co-op/gocron-gorm-lock',
    }
}, {
    name: 'PaGorminator',
    description: 'An open source pagination implementation for Gorm.',
    link: {
        url: 'https://github.com/manuelarte/pagorminator'
    },
}, {
    name: 'Milogo',
    description: 'Partial JSON (Field Selection) for Gin framework.',
    link: {
        url: 'https://github.com/manuelarte/milogo'
    }
}];
---

<div>

    <!-- <h2 class="text-2xl font-bold text-white mb-4">Latest Projects</h2> -->

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

        {projects.map(project =>

            <div class="flex flex-col justify-center items-start border border-gray-700 rounded-lg p-4 bg-black">

                <h3 class="text-xl font-semibold text-white mb-2">
                    {project.name}
                </h3>

                <p class="text-gray-400">
                    {project.description}
                </p>

                {
                    project.link?.url ?
                        <a
                            href={project.link.url}
                            title={project.link.title || project.name}
                            target={project.link.target || '_blank'}
                            class="
                                w-full px-4 py-2.5 mt-4 text-center

                                border border-gray-600 rounded-lg

                                hover:text-primary
                                hover:border-primary
                            ">
                            {project.link.buttonLabel || 'Open Project Website'}
                        </a>
                    : null
                }

            </div>

        )}

    </div>

</div>
